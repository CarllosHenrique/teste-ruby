<% current = I18n.locale.to_s %>

<div class="flex items-center gap-1 rounded-lg bg-gray-200 p-1 transition-all duration-300">
  <%= button_to "EN",
                update_locale_path(locale: :en),
                method: :patch,
                class: [
                  "rounded-md px-3 py-1 text-sm font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2",
                  (current == "en" ? "bg-white text-primary-700 shadow" : "text-gray-700 hover:text-primary-700")
                ].join(" "),
                data: { action: "language#change", language_target: "button", lang: "en" } %>

  <%= button_to "PT",
                update_locale_path(locale: :"pt-BR"),
                method: :patch,
                class: [
                  "rounded-md px-3 py-1 text-sm font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2",
                  (current == "pt-BR" ? "bg-white text-primary-700 shadow" : "text-gray-700 hover:text-primary-700")
                ].join(" "),
                data: { action: "language#change", language_target: "button", lang: "pt-BR" } %>
</div>
