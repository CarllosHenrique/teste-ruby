<% flash.each do |key, message| %>
  <% toast_id = "toast-#{key}" %>
  <div id="<%= toast_id %>"
       data-controller="toast"
       data-toast-target="toast"
       data-toast-type="<%= key %>"
       class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow-sm"
       role="alert">

    <%# Ícone %>
    <% if key.to_s == "notice" %>
      <div class="inline-flex items-center justify-center shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg">
        ✅
      </div>
    <% elsif key.to_s == "alert" %>
      <div class="inline-flex items-center justify-center shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg">
        ⚠️
      </div>
    <% else %>
      <div class="inline-flex items-center justify-center shrink-0 w-8 h-8 text-orange-500 bg-orange-100 rounded-lg">
        ⚡
      </div>
    <% end %>

    <%# Mensagem %>
    <div class="ms-3 text-sm font-normal"><%= message %></div>

    <%# Botão de fechar %>
    <button type="button"
            data-action="click->toast#close"
            class="ms-auto -mx-1.5 -my-1.5 text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8"
            aria-label="Close">
      ✖
    </button>
  </div>
<% end %>
