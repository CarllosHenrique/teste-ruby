<div id="<%= dom_id client %>" class="mb-4">
  <div class="w-full rounded-xl border border-gray-200 bg-white shadow-sm">
    <div class="flex items-center justify-between border-b border-gray-100 px-6 py-4">
      <h3 class="text-base font-semibold text-gray-900">
        <%= client.name %>
      </h3>
      <% pm_label = (PaymentsRegistry.label_for(client.payment_method_key) rescue client.payment_method_key.to_s.titleize) %>
      <span class="inline-flex items-center rounded-md bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
        <%= pm_label %>
      </span>
    </div>

    <!-- body -->
    <div class="px-6 py-5 text-sm text-gray-700">
      <dl class="grid grid-cols-1 gap-y-4 md:grid-cols-2 md:gap-x-6">
        <div>
          <dt class="mb-1 text-xs font-medium uppercase tracking-wide text-gray-500"><%= t("clients.card.email") %></dt>
          <dd class="font-medium text-gray-900"><%= client.email %></dd>
        </div>

        <div>
          <dt class="mb-1 text-xs font-medium uppercase tracking-wide text-gray-500"><%= t("clients.card.due_day") %></dt>
          <dd class="font-medium text-gray-900"><%= client.due_day %></dd>
        </div>
      </dl>
    </div>

    <% if local_assigns[:show_actions] %>
      <div class="flex items-center justify-end gap-2 border-t border-gray-100 px-6 py-3">
        <%= link_to t("common.show"), client, class: "px-3 py-2 rounded-lg border border-gray-300 hover:bg-gray-50 text-sm" %>
        <%= link_to t("common.edit"), edit_client_path(client), class: "px-3 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 text-sm" %>
        <%= link_to t("common.destroy"),
                    client,
                    data: { turbo_method: :delete, turbo_confirm: t("common.confirm_destroy") },
                    class: "px-3 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 text-sm" %>
      </div>
    <% end %>
  </div>
</div>
<%= form_with(model: client, class: "space-y-6") do |f| %>
  <div>
    <%= f.label :name, t("clients.form.name"), class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.text_field :name, required: true,
                     class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" %>
  </div>

  <div>
    <%= f.label :email, t("clients.form.email"), class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.email_field :email, required: true,
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :due_day, t("clients.form.due_day"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.number_field :due_day, in: 1..31, required: true,
                         class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" %>
      <p class="mt-1 text-xs text-gray-500"><%= t("clients.form.hint_due_day") %></p>
    </div>

    <div>
      <%= f.label :payment_method_key, t("clients.form.payment_method"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.select :payment_method_key, PaymentsRegistry.options_for_select, {},
                   class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" %>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit t("clients.form.save"),
                 class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5" %>
  </div>
<% end %>
